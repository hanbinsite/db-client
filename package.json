{
  "name": "db-client",
  "version": "1.0.0",
  "description": "跨平台数据库客户端，支持多种数据库类型",
  "main": "dist/main.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "start:verbose": "chcp 65001 && electron --enable-logging .",
    "demo": "electron start-demo.js",
    "dev": "webpack serve --config webpack.renderer.config.js --mode development",
    "build-main": "webpack --config webpack.main.config.js --mode production",
    "build-renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build": "npm run build-main && npm run build-renderer",
    "pack": "npm run build && electron-builder --dir",
    "pack:win": "npm run build && electron-builder --win",
    "pack:mac": "npm run build && electron-builder --mac",
    "pack:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --publish always"
  },
  "keywords": [
    "electron",
    "database",
    "client"
  ],
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.trae.dbclient",
    "productName": "DB Client",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**",
      "!**/*.map"
    ],
    "asar": true,
    "compression": "store",
    "electronVersion": "25.9.8",
    "electronDownload": {
      "mirror": "https://cdn.npmmirror.com/binaries/electron/"
    },
    "win": {
      "icon": "assets/database-icon.ico",
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "icon": "assets/database-icon.png",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "linux": {
      "icon": "assets/database-icon.png",
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "artifactName": "${productName}-${version}-linux.${ext}"
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.9.4",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "webpack": "^5.102.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@ant-design/plots": "^2.6.5",
    "@monaco-editor/react": "^4.7.0",
    "@types/react-monaco-editor": "^0.16.0",
    "antd": "^5.8.2",
    "dayjs": "^1.11.18",
    "electron-updater": "^6.6.2",
    "monaco-editor": "^0.52.2",
    "mysql2": "^3.15.1",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-monaco-editor": "^0.59.0",
    "redis": "^5.8.3",
    "xlsx": "^0.18.5"
  }
}
